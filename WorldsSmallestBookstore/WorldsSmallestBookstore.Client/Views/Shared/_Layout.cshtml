<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title -WSBookstore</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <section id="site-title">
                        <div class="site-title">
                           @Html.ActionLink("World's Smallest Bookstore", "Index", "Home")
                        </div> 
                    </section>
                    
                </div>
                <div class="float-right">
                    <section id="login">
                       <span> Hello, Choose a login option</span>!
                    </section>
                    <nav>
                        <ul id="menu">
                            @*
                                <li>@Html.ActionLink("Bookseller Login", "Index", "Booksellerlogin")</li>
                                <li>@Html.ActionLink("Customer", "Index", "Customer")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            *@
                           
                                <li><a href="#/">Home</a></li>
                                <li><a href="#/home/about">About</a></li>
                                <li><a href="#/home/contact">Contact Us</a></li>
                                <li><a href="#/customer/index">Customer</a></li>
                                <li><a href="#/booksellerlogin/index">Bookseller Login</a></li>
                            
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - World's Smallest Online Bookstore</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", false)
    </body>
</html>
